#include<stdio.h>
main()
{
    int n,r,sum,temp;
    printf("\nEnter the Number ");
    scanf("%d",&n);
    temp=n;
    sum=0;
    while(n>0)
    {
        r=n%10;
        sum=(sum*10)+r;
        n=n/10;
    }
    if(sum==temp)
    printf("\n %d is a Palindrome Number ",temp);
    else
    printf("\n %d is Not a palindrome ",temp);
}